---
interface Props{
    servicio:string,
    src:string,
    p:string,
    boton?:boolean
}
const {servicio, src, p, boton} = Astro.props
---
<article>
    <div class="flex justify-between mb-2 items-center">
        <h3 class="text-white font-bold text-xl" id={servicio}>{servicio}</h3>
        <a class=`bg-[#acf1bd] font-semibold text-[#003449] rounded-xl text-center ${boton ? "p-2":""}` href="">{boton ? "explorar":""}</a>
    </div>
    <section class="flex items-center rounded-lg bg-[#165269] justify-center">
        <p class="p-2">{p}</p>
        <picture class="flex-[90%]">
            <img src=`/public/img/Servicios/${src}` alt="" class="rounded-r-lg bg-white">
        </picture>
    </section>
</article>